{
  "manifest_version": 3,
  "name": "Water Reminder",
  "description": "This extension reminds you to drink water every hour",
  "version": "1.0",
  "permissions": ["alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
